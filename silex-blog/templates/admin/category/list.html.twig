{% extends "layout.html.twig" %}

{% block title 'Admin rubriques' %}
    
{% block content %}
    <div class="jumbotron">
        <h2>Rubriques</h2>
    </div>
    <p><a href="{{ path('admin_category_edit') }}">Ajouter une rubrique</a></p>
    <table class="table afflist">
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th></th>
        </tr>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <div class="btn-group">
                    <a href="{{ path('admin_category_edit',{id: category.id}) }}"
                       class="btn btn-primary btn-xs">
                       <span class="glyphicon glyphicon-pencil"></span>Modifier
                    </a>
                    <a href="{{ path('admin_category_delete',{id: category.id}) }}"
                       class="btn btn-danger btn-xs">
                       <span class="glyphicon glyphicon-remove"></span>Supprimer
                    </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
