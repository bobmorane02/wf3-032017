{% extends "layout.html.twig" %}

{% block title 'Admin articles' %}
    
{% block content %}
    <h2>Articles</h2>
    <p><a href="{{ path('admin_article_edit') }}">Ajouter une rubrique</a></p>
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Résumé</th>
            <th>Contenu</th>
            <th></th>
        </tr>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.short_content }}</td>
                <td>{{ article.content }}</td>
                <td>
                    <a href="{{ path('admin_article_edit',{id: article.id}) }}"
                       class="btn btn-primary">
                       <span class="glyphicon glyphicon-pencil"></span>Modifier
                    </a>
                    <a href="{{ path('admin_article_delete',{id: article.id}) }}"
                       class="btn btn-danger">
                       <span class="glyphicon glyphicon-remove"></span>Supprimer
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
